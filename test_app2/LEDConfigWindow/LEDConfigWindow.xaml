<Window x:Class="test_app2.LEDConfigWindow.LEDConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test_app2.LEDConfigWindow"
        mc:Ignorable="d"
        Title="Отключение/Включение инидкатора LED" Height="120" Width="300"
        Style="{DynamicResource CustomWindowStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="10" 
                   Text="12321"
                   VerticalAlignment="Top"/>
        <RadioButton Content="Красный" Grid.Row="1"
                                 IsChecked="False"
                                 Cursor="">
        </RadioButton>
        <RadioButton Content="Желтый" Grid.Row="2"
                                 IsChecked="False"
                                 Cursor="">
        </RadioButton>
        <RadioButton Content="Зелёный" Grid.Row="3"
                                 IsChecked="True"
                                 Cursor="">
        </RadioButton>
    </Grid>
</Window>
